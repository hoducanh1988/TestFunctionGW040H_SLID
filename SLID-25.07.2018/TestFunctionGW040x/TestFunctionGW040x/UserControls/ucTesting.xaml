                                            <Setter Property="Foreground" Value="{StaticResource colorTextYellow}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Label.Style>
                        </Label>
                    </StackPanel>
                    
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
