                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Button x:Name="btnCheckUSB" Click="btnCheckUSB_Click" FontSize="17" VerticalAlignment="Top" Grid.Row="0" Height="60" Background="{StaticResource colorBackground}" Foreground="Black" Content="Kiểm tra USB">
                                        <Button.Style>
