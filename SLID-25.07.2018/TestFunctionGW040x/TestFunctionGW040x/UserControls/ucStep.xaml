                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Label.Style>
                                                </Label>
                                            </WrapPanel>
                                            <Label Margin="0,10,0,10" FontSize="15" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left">PHÁN ĐỊNH TỔNG:</Label>
                                            <TextBlock VerticalAlignment="Center" Margin="0,-20,0,0" HorizontalAlignment="Center" x:Name="tbLANResult" FontWeight="Bold" FontSize="80" Text="PASS">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ElementName=tbLANResult, Path=Text}" Value="PASS">
                                                                <Setter Property="Foreground" Value="{StaticResource colorTextOK}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ElementName=tbLANResult, Path=Text}" Value="FAIL">
                                                                <Setter Property="Foreground" Value="{StaticResource colorTextNG}"/>
