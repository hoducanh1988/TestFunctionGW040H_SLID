                                                        <TextBlock Foreground="White">Bước 4. Click nút 'Kiểm tra LAN'</TextBlock>
                                                        <TextBlock></TextBlock>
                                                    </StackPanel>
                                                </Border>
                                            </ToolTip>
                                        </Button.ToolTip>
                                    </Button>
                                    <Grid Grid.Row="1">
                                        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Left">
                                            <Label Margin="0,0,0,10" FontSize="15" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left">Kết quả kiểm tra:</Label>
                                            <WrapPanel>
                                                <Label FontSize="20" FontWeight="Normal" Foreground="{StaticResource colorTextYellow}">LAN-PORT1:</Label>
                                                <Label x:Name="lblLAN1Result" FontSize="20" FontWeight="Bold" Content="PASS">
                                                    <Label.Style>
                                                        <Style TargetType="Label">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding ElementName=lblLAN1Result, Path=Content}" Value="PASS">
                                                                    <Setter Property="Foreground" Value="{StaticResource colorTextOK}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding ElementName=lblLAN1Result, Path=Content}" Value="FAIL">
                                                                    <Setter Property="Foreground" Value="{StaticResource colorTextNG}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding ElementName=lblLAN1Result, Path=Content}" Value="wait">
                                                                    <Setter Property="Foreground" Value="{StaticResource colorTextYellow}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding ElementName=lblLAN1Result, Path=Content}" Value="--">
                                                                    <Setter Property="Foreground" Value="{StaticResource colorTextYellow}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Label.Style>
                                                </Label>
                                            </WrapPanel>
                                            <WrapPanel>
                                                <Label FontSize="20" FontWeight="Normal" Foreground="{StaticResource colorTextYellow}">LAN-PORT2:</Label>
                                                <Label x:Name="lblLAN2Result" FontSize="20" FontWeight="Bold" Content="PASS">
                                                    <Label.Style>
                                                        <Style TargetType="Label">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding ElementName=lblLAN2Result, Path=Content}" Value="PASS">
                                                                    <Setter Property="Foreground" Value="{StaticResource colorTextOK}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding ElementName=lblLAN2Result, Path=Content}" Value="FAIL">
                                                                    <Setter Property="Foreground" Value="{StaticResource colorTextNG}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding ElementName=lblLAN2Result, Path=Content}" Value="wait">
                                                                    <Setter Property="Foreground" Value="{StaticResource colorTextYellow}"/>
