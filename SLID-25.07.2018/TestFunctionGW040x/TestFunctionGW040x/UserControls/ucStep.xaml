                                    </Grid.RowDefinitions>
                                    <Button x:Name="btnCheckMAC" Click="btnCheckMAC_Click" FontSize="17" VerticalAlignment="Top" Grid.Row="0" Height="60" Background="{StaticResource colorBackground}" Foreground="Black" Content="Kiểm tra MAC">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Path=HELP}" Value="true">
                                                        <Setter Property="ToolTipService.ShowDuration" Value="120000"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Path=HELP}" Value="false">
                                                        <Setter Property="ToolTipService.ShowDuration" Value="0"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                        <Button.ToolTip>
                                            <ToolTip Background="Transparent" BorderThickness="0">
                                                <Border CornerRadius="5" Background="#0b4213" BorderBrush="{StaticResource colorBorder}" BorderThickness="1">
                                                    <StackPanel Margin="5">
                                                        <TextBlock Foreground="White" FontWeight="Bold">TRÌNH TỰ THAO TÁC KIỂM TRA MAC:</TextBlock>
                                                        <TextBlock></TextBlock>
                                                        <TextBlock Foreground="White">Bước 1. Kết nối dây LAN giữa PC và ONT</TextBlock>
                                                        <TextBlock Foreground="White">Bước 2. Bật nguồn ONT</TextBlock>
                                                        <TextBlock Foreground="White">Bước 3. Chờ đến khi đèn WLAN của ONT sáng màu xanh</TextBlock>
                                                        <TextBlock Foreground="White">Bước 4. Click nút 'Kiểm tra MAC'</TextBlock>
                                                        <TextBlock></TextBlock>
                                                    </StackPanel>
                                                </Border>
                                            </ToolTip>
                                        </Button.ToolTip>
                                    </Button>
                                    <Grid Grid.Row="1">
                                        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center">
                                            <Label FontSize="15" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center">Kết quả kiểm tra:</Label>
                                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="tbMACResult" FontWeight="Bold" FontSize="80" Text="--">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ElementName=tbMACResult, Path=Text}" Value="PASS">
                                                                <Setter Property="Foreground" Value="{StaticResource colorTextOK}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ElementName=tbMACResult, Path=Text}" Value="FAIL">
                                                                <Setter Property="Foreground" Value="{StaticResource colorTextNG}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ElementName=tbMACResult, Path=Text}" Value="wait">
                                                                <Setter Property="Foreground" Value="{StaticResource colorTextYellow}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ElementName=tbMACResult, Path=Text}" Value="--">
                                                                <Setter Property="Foreground" Value="{StaticResource colorTextYellow}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="tbMACAddress" FontSize="20" FontWeight="SemiBold" Foreground="White" Text="--"></TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </Grid>

                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </TabItem>
            <!--Kiem tra cổng LAN-->
            <TabItem>
                <TabItem.Header>
                    <TextBlock FontSize="15" Text="Check LAN" FontWeight="SemiBold"/>
                </TabItem.Header>
                <Border Background="{StaticResource colorBackground}" CornerRadius="0,0,5,5" BorderBrush="{StaticResource colorBorder}" BorderThickness="1">
