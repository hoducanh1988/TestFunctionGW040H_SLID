                                                    <TextBlock Foreground="White">Bước 3. Chờ đến khi đèn WLAN của ONT sáng màu xanh</TextBlock>
                                                    <TextBlock Foreground="White">Bước 4. Click nút 'Bật LED WPS'</TextBlock>
                                                    <TextBlock></TextBlock>
                                                </StackPanel>
                                            </Border>
                                        </ToolTip>
                                    </Button.ToolTip>
                                </Button>
                                <Button  Margin="0,5,0,0" x:Name="btnLedLOS" Click="btnLed_Click" FontSize="17" VerticalAlignment="Top" Grid.Row="0" Height="60" Background="{StaticResource colorBackground}" Foreground="Black" Content="Bật LED LOS">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Path=HELP}" Value="true">
                                                    <Setter Property="ToolTipService.ShowDuration" Value="120000"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Path=HELP}" Value="false">
                                                    <Setter Property="ToolTipService.ShowDuration" Value="0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <Button.ToolTip>
                                        <ToolTip Background="Transparent" BorderThickness="0">
                                            <Border CornerRadius="5" Background="#0b4213" BorderBrush="{StaticResource colorBorder}" BorderThickness="1">
                                                <StackPanel Margin="5">
                                                    <TextBlock Foreground="White" FontWeight="Bold">TRÌNH TỰ THAO TÁC BẬT LED LOS:</TextBlock>
                                                    <TextBlock></TextBlock>
                                                    <TextBlock Foreground="White">Bước 1. Kết nối dây LAN giữa PC và ONT</TextBlock>
                                                    <TextBlock Foreground="White">Bước 2. Bật nguồn ONT</TextBlock>
                                                    <TextBlock Foreground="White">Bước 3. Chờ đến khi đèn WLAN của ONT sáng màu xanh</TextBlock>
                                                    <TextBlock Foreground="White">Bước 4. Click nút 'Bật LED LOS'</TextBlock>
                                                    <TextBlock></TextBlock>
                                                </StackPanel>
                                            </Border>
                                        </ToolTip>
                                    </Button.ToolTip>
                                </Button>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </TabItem>
            <!--Kiem tra nút nhấn-->
            <TabItem>
                <TabItem.Header>
                    <TextBlock FontSize="15" Text="Check Buttons" FontWeight="SemiBold"/>
                </TabItem.Header>
                <Border Background="{StaticResource colorBackground}" CornerRadius="0,0,5,5" BorderBrush="{StaticResource colorBorder}" BorderThickness="1">
                    <Grid Margin="10,10,10,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Margin="0,0,5,0" CornerRadius="5" BorderBrush="{StaticResource colorBorder}" BorderThickness="0.5" Grid.Column="0">
                            <Grid Margin="5,10,10,0">
                                <Label x:Name="lblbuttonLegend" FontSize="30" FontWeight="Bold" Foreground="{StaticResource colorTextNG}" Content="--"></Label>
                                <RichTextBox x:Name="rtbButton" IsReadOnly="True" VerticalScrollBarVisibility="Visible" BorderThickness="0" Background="Transparent" FontWeight="Normal" Block.LineHeight="1" Margin="0,50,0,0"></RichTextBox>
                            </Grid>
                        </Border>
                        <Border Background="#555555" CornerRadius="5" BorderBrush="{StaticResource colorBorder}" BorderThickness="0.5" Grid.Column="1">
                            <StackPanel Margin="5,10,10,0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="100"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Button x:Name="btnCheckButton" Click="btnCheckButton_Click" FontSize="17" VerticalAlignment="Top" Grid.Row="0" Height="60" Background="{StaticResource colorBackground}" Foreground="Black" Content="Kiểm tra nút nhấn">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Path=HELP}" Value="true">
                                                        <Setter Property="ToolTipService.ShowDuration" Value="120000"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Path=HELP}" Value="false">
                                                        <Setter Property="ToolTipService.ShowDuration" Value="0"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                        <Button.ToolTip>
                                            <ToolTip Background="Transparent" BorderThickness="0">
                                                <Border CornerRadius="5" Background="#0b4213" BorderBrush="{StaticResource colorBorder}" BorderThickness="1">
                                                    <StackPanel Margin="5">
                                                        <TextBlock Foreground="White" FontWeight="Bold">TRÌNH TỰ THAO TÁC KIỂM TRA NÚT NHẤN:</TextBlock>
                                                        <TextBlock></TextBlock>
                                                        <TextBlock Foreground="White">Bước 1. Kết nối dây LAN giữa PC và ONT</TextBlock>
                                                        <TextBlock Foreground="White">Bước 2. Bật nguồn ONT</TextBlock>
                                                        <TextBlock Foreground="White">Bước 3. Chờ đến khi đèn WLAN của ONT sáng màu xanh</TextBlock>
                                                        <TextBlock Foreground="White">Bước 4. Click nút 'Kiểm tra nút nhấn'</TextBlock>
                                                        <TextBlock></TextBlock>
                                                    </StackPanel>
                                                </Border>
                                            </ToolTip>
                                        </Button.ToolTip>
                                    </Button>
                                    <Grid Grid.Row="1">
                                        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Left">
                                            <Label Margin="0,0,0,10" FontSize="15" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left">Kết quả kiểm tra:</Label>
                                            <WrapPanel>
                                                <Label FontSize="20" FontWeight="Normal" Foreground="{StaticResource colorTextYellow}">Nút WPS:</Label>
                                                <Label x:Name="lblWPSResult" FontSize="20" FontWeight="Bold" Content="PASS">
                                                    <Label.Style>
                                                        <Style TargetType="Label">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding ElementName=lblWPSResult, Path=Content}" Value="PASS">
                                                                    <Setter Property="Foreground" Value="{StaticResource colorTextOK}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding ElementName=lblWPSResult, Path=Content}" Value="FAIL">
                                                                    <Setter Property="Foreground" Value="{StaticResource colorTextNG}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding ElementName=lblWPSResult, Path=Content}" Value="wait">
                                                                    <Setter Property="Foreground" Value="{StaticResource colorTextYellow}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding ElementName=lblWPSResult, Path=Content}" Value="--">
                                                                    <Setter Property="Foreground" Value="{StaticResource colorTextYellow}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Label.Style>
                                                </Label>
                                            </WrapPanel>
                                            <WrapPanel>
                                                <Label FontSize="20" FontWeight="Normal" Foreground="{StaticResource colorTextYellow}">Nút Reset:</Label>
                                                <Label x:Name="lblResetResult" FontSize="20" FontWeight="Bold" Content="PASS">
                                                    <Label.Style>
                                                        <Style TargetType="Label">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding ElementName=lblResetResult, Path=Content}" Value="PASS">
                                                                    <Setter Property="Foreground" Value="{StaticResource colorTextOK}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding ElementName=lblResetResult, Path=Content}" Value="FAIL">
                                                                    <Setter Property="Foreground" Value="{StaticResource colorTextNG}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding ElementName=lblResetResult, Path=Content}" Value="wait">
                                                                    <Setter Property="Foreground" Value="{StaticResource colorTextYellow}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding ElementName=lblResetResult, Path=Content}" Value="--">
                                                                    <Setter Property="Foreground" Value="{StaticResource colorTextYellow}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Label.Style>
                                                </Label>
                                            </WrapPanel>
                                            <Label Margin="0,10,0,10" FontSize="15" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left">PHÁN ĐỊNH TỔNG:</Label>
                                            <TextBlock VerticalAlignment="Center" Margin="0,-20,0,0" HorizontalAlignment="Center" x:Name="tbButtonResult" FontWeight="Bold" FontSize="80" Text="PASS">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ElementName=tbButtonResult, Path=Text}" Value="PASS">
                                                                <Setter Property="Foreground" Value="{StaticResource colorTextOK}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ElementName=tbButtonResult, Path=Text}" Value="FAIL">
                                                                <Setter Property="Foreground" Value="{StaticResource colorTextNG}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ElementName=tbButtonResult, Path=Text}" Value="wait">
                                                                <Setter Property="Foreground" Value="{StaticResource colorTextYellow}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ElementName=tbButtonResult, Path=Text}" Value="--">
                                                                <Setter Property="Foreground" Value="{StaticResource colorTextYellow}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </Grid>

                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </TabItem>
        </TabControl>
    </Border>
</UserControl>
