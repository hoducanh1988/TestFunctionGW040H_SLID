                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Label.Style>
                                                </Label>
                                            </WrapPanel>
                                            <WrapPanel>
                                                <Label FontSize="20" FontWeight="Normal" Foreground="{StaticResource colorTextYellow}">LAN-PORT3:</Label>
                                                <Label x:Name="lblLAN3Result" FontSize="20" FontWeight="Bold" Content="PASS">
                                                    <Label.Style>
                                                        <Style TargetType="Label">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding ElementName=lblLAN3Result, Path=Content}" Value="PASS">
                                                                    <Setter Property="Foreground" Value="{StaticResource colorTextOK}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding ElementName=lblLAN3Result, Path=Content}" Value="FAIL">
                                                                    <Setter Property="Foreground" Value="{StaticResource colorTextNG}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding ElementName=lblLAN3Result, Path=Content}" Value="wait">
                                                                    <Setter Property="Foreground" Value="{StaticResource colorTextYellow}"/>
                                                                </DataTrigger>
