                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ElementName=tbLANResult, Path=Text}" Value="--">
                                                                <Setter Property="Foreground" Value="{StaticResource colorTextYellow}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </Grid>

                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </TabItem>
            <!--Kiem tra cổng USB-->
            <TabItem>
                <TabItem.Header>
                    <TextBlock FontSize="15" Text="Check USB" FontWeight="SemiBold"/>
                </TabItem.Header>
                <Border Background="{StaticResource colorBackground}" CornerRadius="0,0,5,5" BorderBrush="{StaticResource colorBorder}" BorderThickness="1">
