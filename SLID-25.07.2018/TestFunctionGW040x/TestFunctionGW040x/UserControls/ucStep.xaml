                                    <Grid Grid.Row="1">
                                        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Left">
                                            <Label Margin="0,0,0,10" FontSize="15" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left">Kết quả kiểm tra:</Label>
                                            <WrapPanel>
                                                <Label FontSize="20" FontWeight="Normal" Foreground="{StaticResource colorTextYellow}">USB 2.0:</Label>
                                                <Label x:Name="lblUSB2Result" FontSize="20" FontWeight="Bold" Content="PASS">
                                                    <Label.Style>
                                                        <Style TargetType="Label">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding ElementName=lblUSB2Result, Path=Content}" Value="PASS">
                                                                    <Setter Property="Foreground" Value="{StaticResource colorTextOK}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding ElementName=lblUSB2Result, Path=Content}" Value="FAIL">
                                                                    <Setter Property="Foreground" Value="{StaticResource colorTextNG}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding ElementName=lblUSB2Result, Path=Content}" Value="wait">
