<UserControl x:Class="TestFunctionGW040x.ucStep"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestFunctionGW040x"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="750">

    <UserControl.Resources>

        <Style TargetType="{x:Type TabItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Grid>
                            <Border  Name="Border" Margin="0,0,-4,0" BorderThickness="1,1,1,1" CornerRadius="2,12,0,0" >
                                <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" Margin="12,2,12,2" RecognizesAccessKey="True"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>

                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Panel.ZIndex" Value="100"/>
                                <Setter TargetName="Border" Property="Background" Value="#43d854" />
                                <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,0" />
                            </Trigger>

                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#FFEEEEEE" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="Orange" />
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Border BorderBrush="{StaticResource colorBorder}" BorderThickness="0.5" CornerRadius="5" Background="{StaticResource colorBackground}">
        <TabControl  SelectionChanged="TabControl_SelectionChanged" Margin="2" BorderThickness="0" Background="{StaticResource colorBackground}">
            <!--Kiem tra phiên bản firmware-->
            <TabItem>
                <TabItem.Header>
                    <Grid Height="30">
                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" Text="Check Firmware" FontWeight="SemiBold"/>
                    </Grid>
                </TabItem.Header>
                <Border Background="Transparent" CornerRadius="0,0,5,5" BorderBrush="{StaticResource colorBorder}" BorderThickness="1">
                    <Grid Margin="10,10,10,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Margin="0,0,5,0" CornerRadius="5" BorderBrush="{StaticResource colorBorder}" BorderThickness="0.5" Grid.Column="0">
                            <Grid Margin="5,10,10,0">
                                <StackPanel>
                                    <Label FontSize="15" FontWeight="SemiBold">Version Firmware:</Label>
                                    <TextBox x:Name="txtFW" FontSize="15" FontWeight="Bold" Text="{Binding Path=FWVERSION, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"></TextBox>
                                </StackPanel>
                                <RichTextBox x:Name="rtbFirmware" IsReadOnly="True" VerticalScrollBarVisibility="Visible" BorderThickness="0" Background="Transparent" FontWeight="Normal" Block.LineHeight="1" Margin="0,80,0,0"></RichTextBox>
                            </Grid>
                        </Border>
                        <Border Background="#555555" CornerRadius="5" BorderBrush="{StaticResource colorBorder}" BorderThickness="0.5" Grid.Column="1">
                            <StackPanel Margin="5,10,10,0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="200"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Button x:Name="btnCheckFW" Click="btnCheckFW_Click" FontSize="17" VerticalAlignment="Top" Grid.Row="0" Height="60" Background="{StaticResource colorBackground}" Foreground="Black" Content="Kiểm tra firmware">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Path=HELP}" Value="true">
                                                        <Setter Property="ToolTipService.ShowDuration" Value="120000"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Path=HELP}" Value="false">
                                                        <Setter Property="ToolTipService.ShowDuration" Value="0"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                        <Button.ToolTip>
                                            <ToolTip Background="Transparent" BorderThickness="0">
                                                <Border CornerRadius="5" Background="#0b4213" BorderBrush="{StaticResource colorBorder}" BorderThickness="1">
                                                    <StackPanel Margin="5">
                                                        <TextBlock Foreground="White" FontWeight="Bold">TRÌNH TỰ THAO TÁC KIỂM TRA FIRMWARE:</TextBlock>
                                                        <TextBlock></TextBlock>
                                                        <TextBlock Foreground="White">Bước 1. Kết nối dây LAN giữa PC và ONT</TextBlock>
                                                        <TextBlock Foreground="White">Bước 2. Bật nguồn ONT</TextBlock>
                                                        <TextBlock Foreground="White">Bước 3. Chờ đến khi đèn WLAN của ONT sáng màu xanh</TextBlock>
                                                        <TextBlock Foreground="White">Bước 4. Click nút 'Kiểm tra firmware'</TextBlock>
                                                        <TextBlock></TextBlock>
                                                    </StackPanel>
                                                </Border>
                                            </ToolTip>
                                        </Button.ToolTip>
                                    </Button>
                                    <Grid Grid.Row="1">
                                        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center">
                                            <Label FontSize="15" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center">Kết quả kiểm tra:</Label>
                                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="tbFWResult" FontWeight="Bold" FontSize="80" Text="--">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ElementName=tbFWResult, Path=Text}" Value="PASS">
                                                                <Setter Property="Foreground" Value="{StaticResource colorTextOK}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ElementName=tbFWResult, Path=Text}" Value="FAIL">
                                                                <Setter Property="Foreground" Value="{StaticResource colorTextNG}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ElementName=tbFWResult, Path=Text}" Value="wait">
                                                                <Setter Property="Foreground" Value="{StaticResource colorTextYellow}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ElementName=tbFWResult, Path=Text}" Value="--">
                                                                <Setter Property="Foreground" Value="{StaticResource colorTextYellow}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="tbFWVersion" FontSize="20" FontWeight="SemiBold" Foreground="White" Text="--"></TextBlock>
                                        </StackPanel>
                                       
                                    </Grid>
                                </Grid>
                                
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </TabItem>
            <!--Kiem tra địa chỉ MAC-->
